//כתוב תוכנית שמקבלת 2 מספרים ומדפיסה את הקטן יותר.
import java.util.Scanner;
class I{
  public static void main (String[] args) {
    Scanner scan= new Scanner(System.in);
    int _x;
    int _y;
    System.out.println("enter a number");
    _x=scan.nextInt();
    System.out.println("enter a number");
    _y=scan.nextInt();
    if (_x<_y)
      System.out.println(_x);
    else
      System.out.println(_y);
    scanner.close();
  }
}

//מי יגיע ראשון? כתוב תוכנית שמקבלת 2 אותיות של רוכבי אופניים, 2 מרחקים שונים ו-2 מהירויות שונות. התוכנית תדפיס את האות של הרוכב בפחות זמן. תזכורת: x=v*t
import java.util.Scanner;
class J{
  public static void main (String[] args) {
    Scanner scan = new Scanner(System.in);
    char _1;
    System.out.println("whats the first rider letter?");
    _1=scan.nextChar();
    char _2;
    System.out.println("whats the second rider letter?");
    _2=scan.nextChar();
    int _distance1;
    System.out.println("whats the first rider distance?");
    _distance1=scan.nextInt();
    int _distance2;
    System.out.println("whats the second rider distance?");
    _distance2=scan.nextInt();
    int _speed1;
    System.out.println("whats the first rider speed?");
    _speed1=scan.nextInt();
    int _speed2;
    System.out.prinln("whats the second rider speed?");
    _speed2=scan.nextInt();
    double _time1=(_distance1/_speed1);
    double _time2=(_distance2/_speed2);
    if (_time1<_time2)
      System.out.println(_1);
    else
      System.out.println(_2);
    scanner.close();
  }
}

